@model Sistema_RV.Models.Usuario

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Layouts/_LayoutHome.cshtml";
}

<div class="register-photo">
    <div class="form-container">
        <div class="image-holder"></div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2 class="text-info text-center">Registrar cuenta</h2><br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label h6 text-info" })

                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        @Html.Label("Fecha de nacimiento: ", new { @class = "text-info h6" })
                        @Html.EditorFor(model => model.Fec_Nac, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fec_Nac, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">

                        @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "control-label h6 text-info" }):&nbsp;&nbsp;&nbsp;
                        <br /><br />
                        Hombre @Html.RadioButtonFor(model => model.Genero, "Hombre") &nbsp;&nbsp;&nbsp; Mujer @Html.RadioButtonFor(model => model.Genero, "Mujer")
                        @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                        

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "control-label h6 text-info" })

                @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Telefono: ", new { @class = "text-info h6" })

                @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label h6 text-info" })

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.Label("Nombre de usuario: ", new { @class = "text-info h6" })

                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label h6 text-info" })

                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RPassword, htmlAttributes: new { @class = "control-label h6 text-info" })

                        @Html.EditorFor(model => model.RPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RPassword, "", new { @class = "text-danger" })
                        
                    </div>
                </div>
            </div>
            
<div class="form-group">
            <input type = "submit" value="REGISTRAR" class="btn btn-primary" />
        </div>
        if (ViewBag.respuesta != null)
        {
            <p class="h3 text-success">@ViewBag.respuesta</p>

}
}
    </div>
</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
